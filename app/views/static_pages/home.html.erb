<% if logged_in? %>

<table>
  <table border="3"> 
  <tr>
    <th>時間管理票</th><td>指定勤務時間</th><th colspan="2">基本時間</th><th>初日</th>
  </tr>
  <tr>
    <td>所属 : <%= @belongs %></td><td>氏名 : <%= @name %></td><td>コード</td><td>出勤日数</td><td>締め</td>
  </tr>
  <tr>
    <td></td><td></td><td></td><td></td><td></td><td></td>
  </tr>
</table>

<table>
  <thead>
  <table border="3"> 
  <tr>
    <th rowspan="2">日付</th>
    <td rowspan="2">曜日</th>
    <th colspan="3">出社</th>
    <th colspan="3">退社</th>
    <th rowspan="2">在社時間</th>
    <th rowspan="2">備考</th>
  </tr>
  <tr>
    <td>時</td>
    <td>分</td>
    <td>出社</td>
    <td>時</td>
    <td>分</td>
    <td>退社</td>
  </tr>
  </thead>
  <tbody>
  <% @dates.each do |day| %>
  <tr>
    <td><%= day.strftime('%m/%d') %></td>
    <td><%= day.strftime('%a') %></td>
    <td><%= attend_time(day) %></td>
    <td><%= attend_minute(day) %></td>

    <td>
    <% if attended?(day) %>

    <% elsif not_yet_attend?(day) %>
      <%= form_for(@attendance) do |f| %>
        <%= f.hidden_field :user_id, :value => @user.id %>
        <%= f.hidden_field :attend_time, :value => Time.now %>
        <%= f.hidden_field :recorded_on, :value => Date.today %>
        <%= f.submit '出勤', class: 'btn btn-primary' %>
      <% end %>
    <% end  %>
    </td>
    <td><%= leave_time(day) %></td>
    <td><%= leaved_minute(day) %></td>

    <td>
      <% if leaved?(day) %>
      <% elsif attended?(day) %>
        <%= form_for(@attendance, url: attendance_path(id: @attendances.find_by(recorded_on: day.strftime('%a, %d %b %Y'))), html: {method: "patch"}) do |f| %>
          <%= f.hidden_field :leave_time, :value => Time.now %>
          <%= f.submit '退勤', class: 'btn btn-primary' %>
        <% end %>
      <% else %>

      <% end %>

    </td>

    <td></td>
    <td></td>
  </tr>
  </tbody>
  <% end %>
</table>

<% else %>

<div class="center jumbotron">
  <h1>勤怠システム</h1>

  <%= link_to "ログイン", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<% end %>          